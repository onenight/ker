<div class="page-header">
  <h1><%= @board.name%> <small>Happy, Inspiration, Life</small></h1>
</div>
<table class="table table-striped"></br>

<div class="row">
  <div class="span8">
    <table class="table table-bordered table-striped">
  	  <thead>
		<th>ID</th>
		<th>Title</th>
		<th>Created</th>
		<th>Updated</th>
	  </thead>
 	  <tbody>
<% @posts.each do |post| %>
        <tr>
		  <td><%= post.id %></td>
    	  <td><%= link_to post.title, board_post_path(@board, post) %></td>
	      <td><%= l(post.created_at, :formate => :short) %></td>
	      <td><%= l(post.updated_at, :formate => :short) %></td>
        </tr>
      
<% end %>
	 </tbody>
    </table><br/>
    <div class="pagination pagination-centered">
	  <ul>
      <%= will_paginate(@posts) %>
	  </ul>
  </div>
<%= link_to 'New Post', new_board_post_path(@board), :class => "btn btn-primary" %>
<%= link_to 'Back-To-Boards', boards_path, :class => "btn" %>
</div>

