<div class="page-header">
  <h1><%= @board.name%> <small>Happy, Inspiration, Life</small></h1>
</div>

    <table class="table table-bordered table-striped">
  	  <thead>
		<th style="width: 50px">ID</th>
		<th style="width: 200">Title</th>
		<th style="width: 50px">Replied</th>
		<th style="width: 200px">Created</th>
		<th style="width: 200px">Updated</th>
	  </thead>
 	  <tbody>
<% @posts.each do |post| %>
        <tr>
		  <td><%= post.id %></td>
    	  <td><%= link_to post.title, board_post_path(@board, post) %></td>
		  <td><%= post.comments.size %></td>
	      <td><%= post.created_at.strftime("%R %v") %></td>
	      <td><%= post.updated_at.strftime("%R %v") %></td>
        </tr>
      
<% end %>
	 </tbody>
    </table><br/>
    <div class="pagination-centered">
	  <ul>
      <%= paginate @posts, :theme => "bootstrap" %>
	  </ul>
	</div>	
	<%= link_to 'New Post', new_board_post_path(@board), :class => "btn btn-primary" %>
	<%= link_to 'Back-To-Boards', boards_path, :class => "btn" %>

<% content_for :sidebar do %>
  <%= render "common/sidebar_latest_post"%>
<% end %>
<% content_for :sidebar2 do %>
  <%= render "common/sidebar_latest_comment"%>
<% end %>