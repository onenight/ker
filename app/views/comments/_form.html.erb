
<%= simple_form_for @comment, :url => board_post_comments_path(@board, @post),
 :html => { :class => "form-horizontal" } do |f| %>

<%= f.input :commenter, :input_html => { :class => "span6"},
 		    :placeholer => "Enter the commenter here" %>
<%= f.input :body, :input_html => { :class => "span6"},
			:placeholer => "Enter the commenter here" %>

<%= f.button :submit, :class => "btn btn-primary" %>
<% end %>