<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<% if @post.cool_image? %>
<p>
  <%= image_tag(@post.cool_image.url(:medium)) %>
</p>
<% end %>

<%= render "comments/comment" %>

<% if user_signed_in? %>
<%= render "comments/form" %>
<% end %>

<br/>

<% if current_user && @post.user == current_user %>
<%= link_to 'Edit-Post', edit_board_post_path(@board, @post) %> |
<% end %>

<%= link_to 'Back-To-Posts', board_posts_path(@board) %>
