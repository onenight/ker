<div class="page-header">
  <h1><%= @post.title %>

    <% if current_user && @post.user == current_user %>
<%= link_to 'Edit-Post', edit_board_post_path(@board, @post), :class => "label" %>
<%= link_to 'Destroy', board_post_path(@board, @post), :class => "label", :confirm => 'Are you sure?', :method => :delete %>
	<% end %>
  </h1>	
</div>

  <div class="span9">
	<div class="thumbnail">
	<% if @post.cool_image? %>
	  <p><%= image_tag(@post.cool_image.url(:medium)) %></p>
	<% end %>

      <p><h3><%= @post.content %></h3></p>
	</div></br>
  </div>
  
  <div class="span8">
<% if user_signed_in? %>
<%= render "comments/form" %>
<% end %>
  </div>

  <div class="span8">
  <%= render "comments/comment" %>
  </div>
  <div class="span8">
<%= link_to 'Back-To-Posts', board_posts_path(@board), :class => "btn" %>
  </div>
<% content_for :sidebar do %>
  <%= render "common/sidebar_latest_post"%>
<% end %>
<% content_for :sidebar2 do %>
  <%= render "common/sidebar_latest_comment"%>
<% end %>